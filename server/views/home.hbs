<div class="row">
    <div class="col-lg-12 text-center">
        <h1>Express Messenger</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-center"> 
        {{#if errors}}
            <div class="alert alert-danger">
                {{#each errors}}
                    <p>{{ message }}</p>
                {{/each }}
            </div>
            <p></p>
        {{/if}}
        {{#if currentUser }}
        <h4>Search for user to chat:</h4>
        <form method="post" action="/thread/search">
            <div class="form-group">
                <input type="text" class="form-control" name="username" id="username" placeholder="Username">
            </div>

            <button type="submit" class="btn btn-default">Search</button>
        </form>
        <p></p>
            {{#each threads}}
            <div class="panel panel-default">
                <div class="panel-heading"> {{ formatDate createdAt "DD MMMM YYYYÐ³., H:mm" }}</div>
                <div class="panel-body">
                    {{#each participants}}
                    {{#ifCond username ../../currentUser.username}}
                    {{else}}
                    <h3>{{username}}</h4>    
                    <a href="/thread/{{username}}">View Thread</a>                                    
                    {{/ifCond}}
                {{/each}}
                </div>
                
            </div>
            {{/each}}
        {{else}}
        <h3>Welcome to Express Messenger! Log in to chat with your friends for free!</h3>
        {{/if}}
    </div>
</div>